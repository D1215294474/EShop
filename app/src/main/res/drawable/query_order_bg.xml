<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">

        <layer-list>
            <item android:drawable="@android:color/white" android:bottom="2dp"/>
            <item android:gravity="bottom" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/orange"/>
                </shape>
            </item>
        </layer-list>

    </item>

    <item>
        <layer-list>
            <item android:bottom="1dp" android:drawable="@android:color/white"/>

            <item android:gravity="bottom" android:height="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_light"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>