<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.feicuiedu.eshop.feature.cart.CartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/partial_mine_top"/>


        <TextView
            android:id="@+id/text_manage_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_54"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_small"
            android:text="@string/title_manage_address"
            android:textAppearance="@style/ContentText.Large"/>

    </LinearLayout>
</ScrollView>
